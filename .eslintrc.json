{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            2,
            "tab",
            {
                "SwitchCase": 1
            }
        ],
        "react/jsx-indent": [
            2,
            "tab"
        ],
        "react/jsx-indent-props": [
            2,
            "tab"
        ],
        "no-tabs": [
            "error",
            {
                "allowIndentationTabs": true
            }
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "eol-last": [
            "error",
            "never"
        ],
        "max-len": [
            "error",
            {
                "code": 120
            }
        ],
        "react/prop-types": [
            "error",
            {
                "ignore": [
                    "navigation"
                ]
            }
		],
		"no-underscore-dangle": "off",
		"no-shadow": "off",
		"react/require-default-props": 0,
		"object-curly-newline": [
			"error",
			{
				"ImportDeclaration": "never"
			}
		],
		"react/jsx-props-no-spreading": 0
    }
}